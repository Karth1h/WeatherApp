<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather forecast service" Height="350" Width="525" ResizeMode="NoResize">
    <Grid Background="#FF237BBD">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Button Width="80" Content="Search" Click="Button_Click" VerticalAlignment="Top" Margin="2" DockPanel.Dock="Right"/>
            <TextBox Name="InputField" VerticalAlignment="Top" Margin="2" Text="Kiev"/>
        </DockPanel>
        <Label Name="LocationLabel" Grid.Row="1" Margin="2" HorizontalAlignment="Center"/>
        <DataGrid Grid.Row="2" Margin="5"></DataGrid>
    </Grid>
</Window>


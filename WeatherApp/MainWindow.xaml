<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather forecast service" Height="350" Width="525" ResizeMode="NoResize">
    <Grid Background="#FF237BBD">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="InputLocation" Grid.Column="0" Height="20" VerticalAlignment="Top" Margin="2">Kiev</TextBox>
        <Button Content="Search" Grid.Column="1" Click="Button_Click" Height="20" VerticalAlignment="Top" Margin="2"/>
   
    </Grid>
</Window>

